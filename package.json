{
    "name": "omnipetal-client",
    "version": "0.1.0",
    "author": {
        "name": "juaneth"
    },
    "main": "src/index.js",
    "description": "A functional, beautiful, and specialised Minecraft Server Manager",
    "license": "MIT",
    "scripts": {
        "start": "electron-forge start",
        "dev": "concurrently -k \"vite\" \"npm run electron:dev\"",
        "build": "vite build",
        "preview": "vite preview",
        "server": "vite",
        "electron:dev": "cross-env IS_DEV=true electron-forge start",
        "electron:build": "electron-forge make",
        "electron:package": "electron-forge package",
        "package": "electron-forge package",
        "make": "vite build && electron-forge make"
    },
    "dependencies": {
        "daisyui": "^2.24.0",
        "electron-forge": "^5.2.4",
        "electron-squirrel-startup": "^1.0.0",
        "is-electron": "^2.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.3.0",
        "store-js": "^2.0.4"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.65",
        "@electron-forge/maker-dmg": "^6.0.0-beta.66",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
        "@electron-forge/maker-zip": "^6.0.0-beta.65",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.0.1",
        "autoprefixer": "^10.4.8",
        "concurrently": "^7.3.0",
        "cross-env": "^7.0.3",
        "electron": "20.0.2",
        "postcss": "^8.4.16",
        "tailwindcss": "^3.1.8",
        "vite": "^3.0.7"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "Omnipetal",
                "executableName": "Omnipetal",
                "icon": "src/resources/icon.ico",
                "asar": true
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "authors": "juaneth",
                    "config": {
                        "name": "Omnipetal",
                        "productName": "Omnipetal Client",
                        "icon": "src/resources/icon.ico"
                    }
                },
                {
                    "name": "@electron-forge/maker-dmg",
                    "config": {
                        "platforms": [
                            "darwin"
                        ],
                        "overwrite": true,
                        "name": "Omnipetal",
                        "AdditionalDMGOptions": {
                            "window": {
                                "size": {
                                    "height": 700,
                                    "width": 500
                                }
                            }
                        }
                    }
                },
                {
                    "name": "@electron-forge/maker-zip"
                }
            ]
        }
    }
}
